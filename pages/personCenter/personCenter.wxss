/**index.wxss**/
page {
  background-color: #f6f6f6;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
  width: 100%;
}

.user-motto {
  display: block;
  text-align: center;
}

.link-container {
  display: flex;
  justify-content: space-between;
}

.link-item {
  height: 50px;
  line-height: 50px;
  display: inline-block;
  width: 48%;
  text-align: center;
  background-color: #fff;
  margin: 10px;
}
.link-item-1{
  height: 50px;
  line-height: 50px;
  display: inline-block;
  width: 100%;
  text-align: 56rpx;
  }
.lab{
  height: 45px;
  line-height: 45px;
  display: inline-block;
  background-color: rgb(236, 176, 98);
  margin-top: 5px;
  text-align: center;
}

